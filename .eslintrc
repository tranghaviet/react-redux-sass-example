{
  "env": {
      "browser": false,
      "commonjs": true,
      "es6": true
  },
  "extends": [
      "plugin:react/recommended"
    ],
  "parserOptions": {
      "ecmaFeatures": {
          "experimentalObjectRestSpread": true,
          "jsx": true,
          "experimentalDecorators": true
      },
      "sourceType": "module"
  },
  "plugins": [
      "react"
  ],
  "rules": {
      "react/jsx-indent": [
        "error",
        2
      ],
      "linebreak-style": [
          "warn",
          "unix"
      ],
      "quotes": [
          "error",
          "double"
      ],
      "semi": [
          "warn",
          "always"
      ]
  },
  "parser": "babel-eslint"
}
